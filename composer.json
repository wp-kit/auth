	"keywords": ["wordpress", "themosis", "oop", "wp-kit", "authentication", "auth"],
	"homepage" : "https://github.com/wp-kit/auth",
	"license": "MIT",
	"authors": [
		{
			"name": "Creative Little Dots",
			"email" : "tech@creativelittledots.co.uk",
